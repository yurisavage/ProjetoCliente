
@{
    ViewBag.Title = "Visualizacao";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h3>Visualizar Dados do Cliente</h3>
<a href="/Cliente/Consulta">Voltar</a> para a página de consulta.
<hr />

<h4>@ViewBag.Mensagem</h4>

@if(ViewBag.Cliente != null)
{
    <div class="col-md-4">  

        <div class="col-md-6">
            Id do Cliente: <br />
            Nome: <br />
            Email: <br />
        </div>

        <div class="col-md-6">
            @ViewBag.Cliente.IdCliente <br/>
            @ViewBag.Cliente.Nome <br />
            @ViewBag.Cliente.Email <br />
        </div>

    </div>
}

